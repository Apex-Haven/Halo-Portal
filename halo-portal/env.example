# HALO Frontend Environment Variables
# Copy this file to .env and fill in your values

# API Base URL (update for your environment)
# Local development:
# VITE_API_BASE_URL=http://localhost:7007/api
# Production (Render backend):
# VITE_API_BASE_URL=https://your-backend.onrender.com/api
# Production (Fly.io backend):
# VITE_API_BASE_URL=https://your-backend.fly.dev/api
VITE_API_BASE_URL=http://localhost:7007/api

# Google Maps API Key (for live map tracking)
# Get your key from: https://console.cloud.google.com/google/maps-apis
# Required APIs: Maps JavaScript API, Geocoding API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# App Configuration
VITE_APP_NAME=HALO
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Haven's AI Logistic Operator

# Environment
VITE_NODE_ENV=production